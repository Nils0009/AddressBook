<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddressBookMAUI.Pages.AddressBookUpdatePage"
             
             Title="AddressBookUpdatePage">
    
    <Grid RowDefinitions="auto,auto,auto" Margin="10" HorizontalOptions="CenterAndExpand">
        <VerticalStackLayout Grid.Row="0">
            <Label Text="Update contact with email" FontSize="Medium"/>
            <Entry />
        </VerticalStackLayout>
        
        <CollectionView Grid.Row="1">

        </CollectionView>
        
        <VerticalStackLayout Grid.Row="2" IsVisible="false">
            <Label Text="First name"/>
            <Entry Margin="0,10,0,10"/>
            <Label Text="Last name"/>
            <Entry Margin="0,10,0,10"/>
            <Label Text="Email"/>
            <Entry Margin="0,10,0,10"/>
            <Label Text="Phone number"/>
            <Entry Margin="0,10,0,10"/>
            <Label Text="Street name"/>
            <Entry Margin="0,10,0,10"/>
            <Label Text="City"/>
            <Entry Margin="0,10,0,10"/>
            <Label Text="Postal code"/>
            <Entry Margin="0,10,0,10"/>
            <Button Text="Add Contact" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>