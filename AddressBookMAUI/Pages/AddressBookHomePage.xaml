<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AddressBookMAUI.Pages.AddressBookHomePage"
             
             xmlns:viewmodels="clr-namespace:AddressBookMAUI.ViewModels"
             x:DataType="{x:Type viewmodels:AddressBookHomeViewModel}"
             
             Title="AddressBookHomePage">
    
    <Grid RowDefinitions="auto" Margin="10">
        <VerticalStackLayout Grid.Row="0">
            <Button Text="Add Contact" Command="{Binding NavigateToAddPageCommand}" Margin="0,5,0,5"/>
            <Button Text="Contact List" Command="{Binding NavigateToListPageCommand}" Margin="0,0,0,5"/>
            <Button Text="Search Contact" Command="{Binding NavigateToSearchPageCommand}" Margin="0,0,0,5"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>